<Window x:Class="_1st_page_individual.page_1xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1st_page_individual"
        mc:Ignorable="d"
        Title="page_1xaml" Height="450" Width="650">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="/Model/Images/1st page.jpg"/>

    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>

    <Grid Background="{StaticResource BackgroundBrush}">
        <StackPanel Height="450" Width="650">
            <StackPanel  Margin="0 50 0 0">
                <TextBlock Text="STUDENT RECORD BOOK." FontSize="50" FontStyle="Oblique" Width="600" Foreground="Black" Background="Transparent"/>
            </StackPanel>
            <Button Style="{StaticResource mainbutton}" x:Name="NextBtn" Click="NextBtn_Click" 
                Content="Next" Margin="0 200 -280 30" Height="50" 
                Width="160" Background="Azure" Foreground="Black" RenderTransformOrigin="0.473,0.936" >
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
